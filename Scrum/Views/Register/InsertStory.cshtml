
@{
    ViewBag.Title = "InsertStory";
}

<section class="content" style="margin-top:25px;">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> Add Story</h3>
        </div>
        <form method="post" action="~/Register/InsertStory" class="form-horizontal">
            <div class="box-body">

                <div class="form-group">
                    <label for="labelStoryName" class="col-sm-2 control-label" style="font-size:17px;">Story Name:</label>
                    <div class="col-sm-10">
                        <input name="storyName" type="text" class="form-control" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="labelStoryDeadline" class="col-sm-2 control-label" style="font-size:17px;">Story Deadline:</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" name="storyDeadline">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default" id="back">Back</button>
                <button type="submit" class="btn btn-info pull-right" > Add Story</button>
            </div>
        </form>
    </div>
   
</section>

@section backScript{
    <script type="text/javascript">
    $(function () {

        $("#back").click(function () {
          location.href = "../Home/Index";
        });
    });

    </script>
}
